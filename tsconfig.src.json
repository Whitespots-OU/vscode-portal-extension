{
  "include": [
    "src/types/ui-kit.d.ts",
    "env.d.ts",
    "src/types/global.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "assets/**/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}