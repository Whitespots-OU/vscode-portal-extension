{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/models/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/webview/**/*",
    "src/extension/webviewApi/types.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@web/*": [
        "./src/webview/*"
      ]
    },
    "lib": [
      "es2023",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}