{
  "name": "vs-code-application-security",
  "description": "Whitespots Application Security Extension for VS Code",
  "version": "0.0.15",
  "type": "module",
  "workspaces": [
    "extension"
  ],
  "scripts": {
    "build:extension": "vite build --config vite.config.extension.ts",
    "build:webview": "vite build --config vite.config.webview.ts",
    "build": "npm run build:extension && npm run build:webview",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",

    "package": "vsce package",
    "test": "vscode-test",
    "vscode:prepublish": "npm run package",
    "compile": "npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "eco-vue-js": "0.10.68",
    "vue": "3.5.16"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "@types/node": "24.0.1",
    "@types/vscode": "1.100.0",
    "@vitejs/plugin-vue": "5.2.4",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.5.0",
    "@vue/tsconfig": "0.7.0",
    "eslint": "9.28.0",
    "npm-run-all": "4.1.5",
    "typescript": "5.8.3",
    "vite": "6.3.5"
  }
}
